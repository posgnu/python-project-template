# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python files
[*.py]
indent_size = 4
max_line_length = 88

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# JavaScript/TypeScript files
[*.{js,jsx,ts,tsx}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# Makefile
[Makefile]
indent_style = tab

# Docker files
[Dockerfile*]
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2

# TOML files
[*.toml]
indent_size = 2

# INI files
[*.ini]
indent_size = 4

# Git config files
[.git*]
indent_size = 2
